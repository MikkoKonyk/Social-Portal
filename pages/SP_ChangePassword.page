<apex:page controller="SP_ChangePasswordCtrl" standardStylesheets="false" showHeader="false" sidebar="false" docType="html-5.0">
    <head>
        <apex:stylesheet value="{!URLFOR($Resource.PasswordStaticResource, '/css/styles.css')}"/>
        <apex:stylesheet value="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
        <apex:slds />
        <title>SP - CHANGE PASSWORD</title>
    </head>  
      
     
       
    <body>      
        <div class="slds-grid slds-align_absolute-center slds-col slds-size_1-of-2 container">
            <div class="slds-grid_vertical slds-m-vertical_large slds-size_1-of-1">

                <div class="slds-col slds-grid_vertical slds-size_1-of-2 slds-align_absolute-center">
                    <apex:image styleClass="slds-col slds-size_1-of-4 slds-m-bottom_small" id="image" url="{!URLFOR($Resource.PasswordStaticResource, '/icons/password.png')}" width="80" height="80"/>
                    <div class="slds-col slds-size_1-of-1 slds-align_absolute-center">
                        <span class="slds-text-heading_medium">CHANGE PASSWORD</span>
                    </div>
                </div>

                <div class="slds-grid slds-align_absolute-center slds-size_1-of-2 sp-errors">
                    <apex:messages />
                </div>
                 
                <apex:form >
                <div class="slds-col slds-grid_vertical slds-size--1-of-1">
                        <div class="slds-col slds-size_1-of-1 slds-align_absolute-center">
                            <apex:inputSecret value="{!oldPassword}" html-placeholder="Old Password" styleClass="slds-input slds-m-top_medium slds-size_1-of-2" html-autofocus="true" rendered="{! !$Site.IsPasswordExpired}" />
                        </div>
                        <div class="slds-col slds-size_1-of-1 slds-align_absolute-center">
                            <apex:inputSecret value="{!newPassword}" html-placeholder="New Password" styleClass="slds-input slds-m-top_medium slds-size_1-of-2"  />
                        </div>
                        <div class="slds-col slds-size_1-of-1 slds-align_absolute-center">
                            <apex:inputSecret value="{!confirmPassword}" html-placeholder="Confirm Password" styleClass="slds-input slds-m-top_medium slds-size_1-of-2"  />
                        </div>

                        <apex:commandbutton styleClass="slds-button slds-button_success slds-m-top_medium slds-size_1-of-2 slds-col slds-align_absolute-center" value="SAVE" action="{!changePassword}"/>
                    <!--<c:SP_AccessRights/>-->
                </div>
                </apex:form>
            </div>
        </div>
    </body>  
</apex:page>