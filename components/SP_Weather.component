<apex:component controller="SP_WeatherCtrl">
    
    <style type="text/css">
        .weather {
            border: 1px solid black;
            margin-top: 1rem;
            background-color: rgba(0, 0, 0, 0,5);
        }
    </style>

    <div class ="container">
        <div class ="row">
            <div class ="col-8 weather mx-auto">
                <div class ="weather-head">
                    <h1 id="location" class="text-center display-6">London, UK</h1>
                    <button onclick ="getWeather();">Get Weather</button>
                        <apex:image url="{!URLFOR($Resource.WeatherIcons, 'weather.png')}" width="50" height="50"/>
                    <div class ="row"> 
                        <div id="temperatureId">
                            <apex:image url="{!URLFOR($Resource.WeatherIcons, 'temp.png')}" width="20" height="20"/>Temperature
                        </div>
            
                        <div id="humidityId">
                            <apex:image url="{!URLFOR($Resource.WeatherIcons, 'humidity.png')}" width="20" height="20"/>Humidity
                        </div>
            
                        <div id="pressureId">
                            <apex:image url="{!URLFOR($Resource.WeatherIcons, 'pressure.png')}" width="20" height="20"/>Pressure
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script type="text/javascript">
        function getWeather() {
            var city = 'London';
            Visualforce.remoting.Manager.invokeAction(
                '{!$RemoteAction.SP_WeatherCtrl.getWeatherByCity}', //function definition
                city,  //input parameters
                function (result, event) { //callback result
                    if (event.status) { //handle result
                        document.getElementById('temperatureId').innerHTML += result.temp;
                        document.getElementById('humidityId').innerHTML +=  result.humidity;
                        document.getElementById('pressureId').innerHTML +=  result.pressure;
                        console.log(JSON.stringify(result));
                        alert(JSON.stringify(result));
                    } else { //handle error

                    }
                }, { buffer: true, escape: true, timeout: 120000 });
        }
    </script>
</apex:component>
